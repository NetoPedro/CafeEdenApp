<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.netoapps2.cafeedenapp.Contacts"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menuBotaoContactos"
        android:textSize="32sp"
        android:id="@+id/contactsHeader"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/telemovelLogo"
        android:layout_marginBottom="32dp"
        android:src="@drawable/phone_icon"
        android:layout_below="@id/contactsHeader"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefoneLogo"
        android:src="@drawable/phone_icon2"
        android:layout_marginBottom="32dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/telemovelLogo"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/telefone"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_toRightOf="@id/telemovelLogo"
        android:paddingLeft="8dp"
        android:layout_below="@id/contactsHeader"
        android:text="@string/contactsTelemovel"
        />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/telemovel"
        android:textSize="24sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/telefoneLogo"
        android:paddingLeft="8dp"
        android:layout_below="@id/telemovelLogo"
        android:layout_marginBottom="32dp"
        android:text="@string/contactsTelefone"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebookLogo"
        android:layout_marginBottom="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/facebooklogo"
        android:layout_below="@id/telefoneLogo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/facebook"
        android:textSize="24sp"
        android:layout_below="@id/telefoneLogo"
        android:layout_toRightOf="@id/facebookLogo"
        android:paddingLeft="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/contactsPaginaFb"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoMapa"
        android:layout_below="@id/facebookLogo"
        android:layout_centerInParent="true"
        android:text="@string/mapa"
        />

</RelativeLayout>
